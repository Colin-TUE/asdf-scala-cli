#!/usr/bin/env bash

set -eo pipefail

if [[ $ASDF_INSTALL_TYPE != 'version' ]]; then
  echo "Unsupported install type: $ASDF_INSTALL_TYPE"
  echo "Install type must be 'version'"
  exit 1
fi

filename="v$ASDF_INSTALL_VERSION/scala-cli.sh"
url="https://github.com/VirtusLab/scala-cli/blob/$filename"
dl="$ASDF_DOWNLOAD_PATH/$filename"

curl "$url" -Lo "$dl"
chmod +x $dl
